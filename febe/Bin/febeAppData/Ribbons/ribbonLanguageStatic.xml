<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ribbon-layout version="23.08.2019">
  <basedir id="pdc-external">febeAppData\pdcVipIcons</basedir>
  <dictionary file="febeAppData\Ribbons\ribbonLanguage_Dictionary.xml" namespace="language" />
  <section id="ribbon.section.language" label="Language">
    <tooltip text="Change UI language" />
    <block>
      <row>
        <menu cmdstyle="image-and-text-vertical" enabled="true" id="ribbon.menu.language" label="lngag" layout="static" style="popupmenu">
          <icon file="$(pdc-external)\_license-cc\categories\applications-education-language.ico" />
          <tooltip text="Change UI Language (Static)" />
          <cmd changeEvent="true" cmdstyle="image-and-text-horizontal" enabled="true" id="ribbon.menu.language.cmd.rus" label="Rusian" run="default" visible="true">
            <icon file="$(pdc-external)\flags\flag-ru.ico" />
            <tooltip text="Set Russian language" />
          </cmd>
          <separator />
          <cmd changeEvent="true" cmdstyle="image-and-text-horizontal" enabled="true" id="ribbon.menu.language.cmd.eng" label="English" run="default" visible="true">
            <icon file="$(pdc-external)\flags\flag-gb.ico" />
            <tooltip text="Set English language" />
          </cmd>
        </menu>
      </row>
    </block>
  </section>
</ribbon-layout>